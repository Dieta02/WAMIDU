{% extends 'template.html.twig' %}

{% block title %}Ajouter un client{% endblock %}

{% block content %}

     <section class="section main-section">
    <div class="card mb-6">
      <header class="card-header ">
        <p class="card-header-title notification blue">
          <span class="icon"><i class="mdi mdi-ballot"></i></span>
          Formulaire d'enregistrement des clients
        </p>
      </header>
      <div class="card-content">
{{ form_start(form ,{'attr':{"novalidate":"novalidate"}})}}
          <div class="field">

            <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 mb-6">
            
{% for error in errors %}
<span> {{error.message}}<span/>
{% endfor %}
              <div class="col-span-2 ...">
                  <div class="control icons-left">
                    {{form_widget(form.name,{'attr':{"class":"input" ,"placeholder":"Nom du client"}})}}     
                    <span class="icon left"><i class="mdi mdi-account"></i></span>
                  </div>
              </div>

              <div class="col-span-2 ...">
                  <div class="control icons-left">
                    {{form_widget(form.surname,{'attr':{"class":"input" ,"placeholder":"Pr√©nom(s) du client"}})}}     
                    <span class="icon left"><i class="mdi mdi-account"></i></span>
                  </div>
              </div>
              <div class="col-span-2 ...">
                  <div class="control icons-left">
                    {{form_widget(form.email,{'attr':{"class":"input" ,"placeholder":"Adresse email du client"}})}}     
                    <span class="icon left"><i class="mdi mdi-account"></i></span>
                  </div>
              </div>
              <div class="col-span-2 ...">
                  <div class="control icons-left">
                    {{form_widget(form.codeUser,{'attr':{"class":"input"}})}}     
                    <span class="icon left"><i class="mdi mdi-account"></i></span>
                  </div>
              </div>
            <div class="col-span-2 ...">
                  <div class="control icons-left">
                    {{form_widget(form.ticket,{'attr':{"class":"input" ,"placeholder":"Nombre de tickets"}})}}     
                    <span class="icon left"><i class="mdi mdi-account"></i></span>
                  </div>
              </div>

            </div>
          <hr>
          <div class="field grouped">
            <div class="control">
                  <button class="button green">{{ button_label|default('Enregistrer') }}</button>

            </div>
            <div class="control">
              <button type="reset" class="button red">
                Annuler
              </button>
            </div>
          </div>


      
     {{ form_end(form) }}

      </div>
    </div>

  </section>

{% endblock %}
